
{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "/src/types"],
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": ".",
      "baseUrl": ".",
      "strict": true,
      "paths": {
        "src/*": ["src/*/index", "src/*"]
      }
    },
    "include": ["src/**/*", "src/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
  }